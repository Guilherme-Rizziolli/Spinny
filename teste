  <!-- Scripts -->
  <script>
    // Atualiza ano do footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Form behaviour (exemplo b√°sico). Aqui voc√™ pode integrar com sua API ou servi√ßo de e-mail.
    document.getElementById('orcamentoForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const nome = document.getElementById('nome').value.trim();
      const email = document.getElementById('email').value.trim();
      const telefone = document.getElementById('telefone').value.trim();
      const cidade = document.getElementById('cidade').value.trim();
      const detalhes = document.getElementById('detalhes').value.trim();

      if (!nome || !email || !detalhes) {
        alert('Por favor, preencha os campos obrigat√≥rios: Nome, E-mail e Detalhes do evento.');
        return;
      }

      // exemplo simples: comp√µe um e-mail via mailto (abre cliente do usu√°rio)
      const subject = encodeURIComponent('Pedido de Or√ßamento - Spinny');
      const body = encodeURIComponent(
        `Nome: ${nome}\nE-mail: ${email}\nTelefone: ${telefone}\nCidade: ${cidade}\n\nDetalhes:\n${detalhes}`
      );
      window.location.href = `mailto:contato@spinny.com?subject=${subject}&body=${body}`;
    });

    // Mobile menu toggle
    const mobileToggle = document.getElementById('mobileToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const closeMobile = document.getElementById('closeMobile');
    mobileToggle?.addEventListener('click', () => { mobileMenu.classList.remove('hidden'); });
    closeMobile?.addEventListener('click', () => { mobileMenu.classList.add('hidden'); });
    // Close when clicking outside the panel
    mobileMenu?.addEventListener('click', (e) => {
      if (e.target === mobileMenu) mobileMenu.classList.add('hidden');
    });
  </script>
